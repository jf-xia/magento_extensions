?>
<div class="home_viewed_block">
<div class="head"><span><?php echo $this->__('Your Recently Viewed') ?></span></div>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>

   <div class="home_viewed_content">
   <ol class="home_viewed">
    <?php $i=0;  foreach ($_products as $_product): ?>
        <?php if($i>3) {break;} ?>
         <li class="item_list">
	        <div class="item_image">
                        <a href="<?php echo $this->getProductUrl($_product) ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(45) ?>" width="45" height="45" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" /></a>
			</div>
			<div class="other_info">
				<h3 class="product-name"><a href="<?php echo $this->getProductUrl($_product) ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a></h3>
				<?php echo $this->getPriceHtml($_product, true, '-home-viewed') ?>
			</div>
        </li>
		<div class="clear"></div>
    <?php $i++; endforeach; ?>
    </ol>
 </div>

<?php endif; ?>
</div>

