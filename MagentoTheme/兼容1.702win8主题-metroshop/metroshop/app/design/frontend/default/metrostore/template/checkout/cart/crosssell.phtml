/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="slider-box span12 cartSell">
    <div class="headingBox">
        <span class="headingIcons featuredIcon"></span>
        <h1 class="line_heading"><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h1>
	</div>
<div id="mix_container" class="mix_container">
  <div class="mix_wrapper">
  <div class="mix_inner">
    <ul id="crosssell-products-list" class="crosssell">
    <?php foreach ($this->getItems() as $_item): ?>
        <li class="item">
        <div class="itemInner">
            <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(220,215); ?>" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
            <div class="product-details">
            <div class="ic_caption">
                <h2 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h2>
                <?php echo $this->getPriceHtml($_item, true) ?>
            </div> 
                 <div class="bottomBox">
                 <div class="buttonox">  
                <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                </div>
                <div class="addBox">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
                    <?php endif; ?>
                    <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                        <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a>
                    <?php endif; ?>
                </div>
                </div>
            </div>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    </div>
    </div>
    </div>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>