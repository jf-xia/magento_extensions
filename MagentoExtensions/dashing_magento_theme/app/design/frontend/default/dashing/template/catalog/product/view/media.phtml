/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image">
    <a href="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>" class="fancybox" title="<?php echo $this->htmlEscape($this->getImageLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(375) ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel()) ?>" /></a>
</p>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(375).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
<?php $_iterator = 0; ?>
<?php $_count = $this->getGalleryImages()->count(); ?>
    <ul>
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <li class="<?php if(($_iterator-1)%$_count==0): ?>first<?php endif;?>">
            <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>" rel="more-views" class="fancybox" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(67); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
