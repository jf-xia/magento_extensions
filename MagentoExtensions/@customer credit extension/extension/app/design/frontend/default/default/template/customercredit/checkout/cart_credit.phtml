<?php if($this->isPartialPaymentEnabled()):?>
<div class="credit-payment box">
<h4><?php echo $this->__('Payment with Credit') ?></h4>
<?php if($this->getUseInternalCredit()): ?>
<p><?php echo $this->__('You are using your credit to pay this order.')?>&nbsp;<a href="<?php echo $this->getUrl('customercredit/index/removeCreditUse')?>">Don't use credit</a></p>
<?php else: ?>
<form action="<?php echo $this->getUrl('customercredit/index/updateCreditPost') ?>" method="post" id="credit-payment">
    <p><?php echo $this->__('Available credit amount is $%s', $this->getCreditValue()) ?></p>
    <p>
        <button type="submit" class="form-button-alt"><span><?php echo $this->__('Use Credit') ?></span></button>
    </p>
</form>
<?php endif; ?>
</div>
<?php endif; ?>