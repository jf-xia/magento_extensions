<config>
  <modules>
    <MageWorx_Adminhtml>
      <version>1.1.1</version>
    </MageWorx_Adminhtml>
  </modules>
    <admin>
        <routers>
            <mageworx>
                <use>admin</use>
                <args>
                    <module>MageWorx_Adminhtml</module>
                    <frontName>mageworx</frontName>
                </args>
            </mageworx>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <mageworx translate="title" module="mageworx">
						<title>Get Support</title>
						<sort_order>11</sort_order>
						<action>adminhtml/system_config/edit/section/mageworx</action>
                    </mageworx>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mageworx translate="title" module="mageworx">
                                            <title>MageWorx &gt; Extensions &amp; Support</title>
                                                <children>
                                                    <extensions translate="title">
                                                        <title>Extensions Information</title>
                                                        <sort_order>1</sort_order>
                                                    </extensions>
                                                    <support translate="title">
                                                        <title>Get Support</title>
                                                        <sort_order>2</sort_order>
                                                    </support>
                                                </children>
                                        </mageworx>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <MageWorx_Adminhtml>
                    <files>
                        <default>MageWorx_Adminhtml.csv</default>
                    </files>
                </MageWorx_Adminhtml>
            </modules>
        </translate>
    </adminhtml>
	<global>
		<blocks>
		  <mageworx>
			<class>MageWorx_Adminhtml_Block</class>
		  </mageworx>
		  <adminhtml>
		      <rewrite>
		          <system_config_edit>MageWorx_Adminhtml_Block_System_Config_Edit</system_config_edit>
		      </rewrite>
		  </adminhtml>
		</blocks>
        <models>
            <mageworx>
                <class>MageWorx_Adminhtml_Model</class>
            </mageworx>
        </models>
		<resources>
		  <mageworx_setup>
			  <setup>
				  <module>MageWorx_Adminhtml</module>
			  </setup>
			  <connection>
				  <use>core_setup</use>
			  </connection>
		  </mageworx_setup>
		  <mageworx_write>
			  <connection>
				  <use>core_write</use>
			  </connection>
		  </mageworx_write>
		  <mageworx_read>
			  <connection>
				  <use>core_read</use>
			  </connection>
		  </mageworx_read>
		</resources>
		<helpers>
			<mageworx>
                <class>MageWorx_Adminhtml_Helper</class>
			</mageworx>
		</helpers>
	  <template>
            <email>
                <mageworx_support_email_template>
                    <label>MageWorx Support</label>
                    <file>mageworx_support.html</file>
                    <type>text</type>
                </mageworx_support_email_template>
            </email>
        </template>
	</global>
	
	<default>
		<mageworx>
            <support>
                <email><![CDATA[c3VwcG9ydEBtYWdld29yeC5jb20=]]></email>
                <name>MageWorx Support</name>
                <template>mageworx_support_email_template</template>
            </support>
		</mageworx>
	</default>
</config>
